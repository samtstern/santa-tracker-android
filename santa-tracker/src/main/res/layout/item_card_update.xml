<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_background_update"
    android:contentDescription="@string/new_update_from_santa"
    android:focusable="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:contentDescription="@null"
        android:src="@drawable/avatar_santa" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/santacamDashboardPadding"
        android:paddingLeft="@dimen/santacamDashboardPadding"
        android:paddingRight="@dimen/santacamDashboardPadding"
        android:paddingTop="@dimen/santacamDashboardPadding">

        <TextView
            android:id="@+id/update_label"
            style="@style/DashboardLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/santacamDashboardExtraAvatar"
            android:text="@string/santa_update"
            android:textColor="@android:color/white"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/update_text"
            style="@style/DashboardTextMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_text_spacing"
            tools:text="I hope someone left out some carrots, Dasher is hungry" />

    </LinearLayout>

</FrameLayout>
